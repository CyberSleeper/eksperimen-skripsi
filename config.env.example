# ============================================
# Configuration File for Automated Testing
# ============================================
# Copy this to config.env and customize for your environment

# VM IP Addresses
VM_NO_CACHE="xxx.xxx.xxx.xxx"          # VM without caching
VM_CACHE="xxx.xxx.xxx.xxx"             # VM with cache (for HIT scenarios)
VM_CACHE_BACKUP="xxx.xxx.xxx.xxx"      # VM with cache (for MISS scenarios)

# SSH Configuration
SSH_KEY="~/.ssh/id_ed25519"
SSH_USER="ubuntu"  # User for TARGET VMs

# K6 VM Configuration (for self-monitoring)
K6_VM="127.0.0.1"           # localhost - K6 VM monitoring itself
K6_SSH_USER="ec2-user"      # User on K6 VM

# Database Configuration
DB_NAME="aisco_product_hightide"
DB_USER="postgres"
DB_PORT="5432"

# Test Configuration (can be overridden by command line)
RUNS=10

# Load Scenario Configuration
# Options: "normal" (5 VUs) or "high" (50 VUs)
LOAD_SCENARIO="high"  # Set to "normal" for baseline, "high" for peak traffic

# Application Configuration
APP_RESTART_WAIT=120  # Seconds to wait after seeding before testing
WAIT_BETWEEN_TESTS=15